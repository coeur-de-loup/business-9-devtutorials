# Production Environment Variables Template
# Copy this file to .env.production.local and fill in the values
# DO NOT commit .env.production.local to git

# Application
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_APP_NAME="DevTutorials"

# Database - Neon (Production)
DATABASE_URL="postgresql://user:password@ep-example.us-east-2.aws.neon.tech/devtutorials?sslmode=require"
DIRECT_URL="postgresql://user:password@ep-example.us-east-2.aws.neon.tech/devtutorials?sslmode=require&pgbouncer=true"

# NextAuth.js
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# OAuth Providers (Optional - Get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Stripe (Production Keys - Get from https://dashboard.stripe.com)
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."

# Stripe Connect (For Creator Payouts)
STRIPE_CONNECT_WEBHOOK_SECRET="whsec_..."

# Cloudflare R2 (For File Storage - Production)
CLOUDFLARE_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="devtutorials-files"

# Resend (Email - Get from https://resend.com)
RESEND_API_KEY="re_..."

# Sentry (Error Tracking - Get from https://sentry.io)
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_PROJECT_ID=""

# Feature Flags
FEATURE_VIDEO_STREAMING="true"
FEATURE_CODE_DOWNLOAD="true"
FEATURE_REVIEWS="true"
FEATURE_AFFILIATE_PROGRAM="false"
